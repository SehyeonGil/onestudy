                              <tr>
                                <td id="name"></td>
                                <script type="text/javascript">
                                  var name = "<%=board.studentList[i].name%>";
                                  document.getElementById('name').innerHTML = name.substr(0,1) +"XX";
                                </script>
                                <td>신청</td>
                                <td><%=(2000+(board.price*200))%></td>
                              </tr>
                                  <%}}%>
                              <%}%>
                            </tbody>
                          </table>
                          <div class="row">
                            <ul class="create_study">
                                <li><a href="/writeMaster" style="color: white; text-decoration: none;">결제</a></li>
                            </ul>
                          </div>
