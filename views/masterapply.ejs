    <div style="margin:70px 0;">
      <form action="/process/addmaster" method="post">
      <h1 style="text-align:center">Master Profile</h1>
      <div class="masterApply" style="width:35%;margin:auto;display:block;padding-top:30px;">
        <div class="row form-group">
          <label for="name" class="col-lg-2">이름</label>
          <input type="text" name="name" class="col-lg-10 form-control" style="background-color:white;" required/>
        </div>
        <div class="row form-group">
          <label for="age" class="col-lg-2">나이</label>
          <input type="number" name="age" class="col-lg-10 form-control" style="background-color:white;" required/>
        </div>
        <div class="row form-group">
          <label for="name" class="col-lg-2">성별</label>
          <input type="radio" name="gender" class="col-lg-1" style="margin:20px 0;" value="남" checked required>
          <label for="남">남성</label>
          <input type="radio" name="gender" class="col-lg-1" style="margin:20px 0;" value="여" required>
          <label for="여">여성</label>
        </div>
        <div class="row form-group">
          <label for="phoneNumber" class="col-lg-2">휴대폰</label>
          <input type="text" name="phoneNumber" class="col-lg-7 form-control" style="background-color:white;" required/>
          <input type="button" name="findAddress" style="border-radius:30px;margin-left:10px;width:120px;color:white;background-color:gray;border-style:none;" value="인증">
        </div>
        <div class="row">
            <span class="col-lg-2"></span>
            <input type="text" class="col-lg-10 form-control" style="background-color:white;" name="address2">
        </div>
        <div class="form-group">
          <label for="userImage">사진</label>
          <div class="input-group">
            <span class="input-group-btn">
                <span class="btn btn-default btn-file">
                  <input type="file" accept="image/png, image/jpeg, image/gif" id="imgInp">
                </span>
            </span>
            <input id='urlname'type="text" class="form-control" readonly>
            <img id='img-upload'/>
        </div>
        </div>
        <input type="submit" name="save" style="width:150px;height:40px;border-radius:30px;color:white;background-color:#404040;border-style:none;font-size:16px;margin:auto;display:block;" value="저장&nbsp;&gt;">
      </div>
      </form>
    </div>
