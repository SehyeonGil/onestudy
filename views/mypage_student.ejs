                  <h2>All Categories</h2>
                  <p>현재 관심분야 : <%=authUser.interested%></p>
              </div>
              <form action="/process/categoryModify" class="category-select" method="post">
                  <!-- Category list -->
                    <div class="inputGroup">
                       <input id="radio1" name="check_c" value="언어" type="radio"/>
