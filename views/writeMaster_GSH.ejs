                        function maxoption(){
                          var minNum = document.getElementById('minNum').selectedIndex;
                          var min = document.getElementsByTagName("option")[minNum].value;
                          if(min>0 && min<100){
                            var maxNum = document.getElementById('maxNum');
                            var options ="<option value='최대'>최대</option>";
                            for(min;min<100;min++){
                               options+="<option value='"+min+"'>"+min+"</option>";
                            }
                            maxNum.innerHTML = options;
                          }
                        }
                        function chkchk(form){
                          var arr_form = document.getElementsByName('category');
                          var num=0;

                          for(var i =0;i<arr_form.length;i++){
                            if(arr_form[i].checked){
                              num++;
                            }
                          }
                          if(!num){
                            alert('카테고리 : 하나 이상 선택해주시기 바랍니다.');
                            return false;
                          }
                        }

                        function date_format(dateValue){
                          var dd = dateValue.getDate();
                          var mm = dateValue.getMonth()+1;
                          var yyyy = dateValue.getFullYear();

                          if(dd<10){
                            dd = '0'+dd;
                          }
                          if(mm<10){
                            mm = '0'+mm;
                          }
                          return yyyy+'-'+mm+'-'+dd;
                        }

                        function readURL(input) {
                           if (input.files && input.files[0]) {
                               var reader = new FileReader();

                               reader.onload = function (e) {
                                   $('#blah')
                                       .attr('src', e.target.result);
                               };

                               reader.readAsDataURL(input.files[0]);
                           }
                       }
