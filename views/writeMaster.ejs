                    <script type="text/javascript">
                        $(function(){
                            $('textarea.text').froalaEditor({
                              key: 'bA2A8B8D7cD3F3C2C1G3A4C4B6C2D1vdbhA-21D-17eukD1wzB1C-22j==',
                              height: 150,
                              scaytAutoload : true

                            });

                            $('form').on('submit', function (e) {
                              if ($('#text1').froalaEditor('core.isEmpty')) {
                                e.preventDefault();
                                $('#text1').froalaEditor('popups.show', 'aa', 300, 600, 200);

                                return false;
                              }
                              if ($('#text2').froalaEditor('core.isEmpty')) {
                                e.preventDefault();
                                alert('마스터 소개를 입력하세요.')

                                return false;
                              }
                            });

                            var date = new Date();
                            date.setDate(date.getDate()+1);
                            document.getElementById('datePicker').valueAsDate = date;
                            document.getElementById('datePicker').setAttribute("min",date_format(date));

                        });
                        function chkchk(form){
                          var arr_form = document.getElementsByName('category');
                          var num=0;

                          for(var i =0;i<arr_form.length;i++){
                            if(arr_form[i].checked){
                              num++;
                            }
                          }
                          if(!num){
                            alert('카테고리 : 하나 이상 선택해주시기 바랍니다.');
                            return false;
                          }
                        }

                        function date_format(dateValue){
                          var dd = dateValue.getDate();
                          var mm = dateValue.getMonth()+1;
                          var yyyy = dateValue.getFullYear();

                          if(dd<10){
                            dd = '0'+dd;
                          }
                          if(mm<10){
                            mm = '0'+mm;
                          }
                          return yyyy+'-'+mm+'-'+dd;
                        }

                        function readURL(input) {
                           if (input.files && input.files[0]) {
                               var reader = new FileReader();

                               reader.onload = function (e) {
                                   $('#blah')
                                       .attr('src', e.target.result);
                               };

                               reader.readAsDataURL(input.files[0]);
                           }
                       }
                    </script>

