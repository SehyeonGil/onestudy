<script type="text/javascript">
$(function(){
    // 이메일정규식 로그인
    $('#email').change(function(){
      var email = document.getElementById('email').value;
      var regex = /^[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*\.[a-zA-Z]{2,3}$/;
      if(regex.test(email)==false){
        $('#email').focus();
        alert('이메일 형식으로 작성해주세요.');
        document.getElementById('email').value = "";
      }
    })
    // 이메일정규식 회원가입
    $('#email2').change(function(){
      var email = document.getElementById('email2').value;
      var regex = /^[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*@[0-9a-zA-Z]([-_\.]?[0-9a-zA-Z])*\.[a-zA-Z]{2,3}$/;
      if(regex.test(email)==false){
        $('#email2').focus();
        alert('이메일 형식으로 작성해주세요.');
        document.getElementById('email2').value = "";
      }
    })

    // 비밀번호 정규식 회원가입
    $('#password1').change(function(){
      var password1 = document.getElementById('password1').value;
      var password2 = document.getElementById('password2').value;
      var regex = /^(?=.*[A-Za-z])(?=.*\d)(?=.*[$@$!%*_()#?&])[A-Za-z\d$@$!%*_()#?&]{8,}$/;
      if(regex.test(password1)==false){
        alert("숫자, 문자, 특수문자(@$!%^()*_#?)를 각 1개이상 포함하여 최소 8자리로 입력하세요.");
        document.getElementById('password1').value = "";
      }
      else if(password2!=""&&password1!=password2){
        alert("비밀번호가 일치하지 않습니다!");
        document.getElementById('password2').value = "";
      }
      var value = $('#password1').val();
      if(value==""){
        $('#passwordCorrect').hide();
        $('#passwordIncorrect').hide();
      }
    });

    $('#password2').change(function(){
      var password1 = document.getElementById('password1').value;
      var password2 = document.getElementById('password2').value;
      var value = $('#password2').val();
      if(password2!=""&&password1!=password2){
        document.getElementById('password2').value = "";
        alert("비밀번호가 일치하지 않습니다!");
      }
    })
})
</script>

