<section class="store-coupon section">
<div class="container">
    <div id="pricing" class="row">
      <div class="" style="margin:auto;">
        <div class="price_card alpha col-12 col-md-3">
            <div class="header">
                <span class="price">만원</span>
                <span class="name">10,000 Credit</span>
            </div>
            <ul class="features">
                <li>기본 10,000 크레딧</li>
                <li>+ 0 보너스 크레딧</li>
                <li><strong>총 10,000 크레딧</strong></li>
            </ul>
            <button>결제하기</button>
        </div>
        <div class="price_card bravo col-12 col-md-3">
            <div class="header">
                <span class="price">오만원</span>
                <span class="name">55,000 Credit</span>
            </div>
            <ul class="features">
                <li>기본 50,000 크레딧</li>
                <li>+ 5,000 보너스 크레딧</li>
                <li><strong>총 55,000 크레딧</strong></li>
            </ul>
            <button>결제하기</button>
        </div>
        <div class="price_card charlie col-12 col-md-3">
            <div class="header">
                <span class="price">십만원</span>
                <span class="name">120,000 Credit</span>
            </div>
            <ul class="features">
                <li>기본 100,000 크레딧</li>
                <li>+ 20,000 보너스 크레딧</li>
                <li><strong>총 120,000 크레딧</strong></li>
            </ul>
            <button>결제하기</button>
        </div>
      </div>

    </div>
</div>
</section>
