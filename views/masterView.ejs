                    <div class="media">
                        <!-- Store Icon -->
                        <form action="/process/addboard" method="post" style="width:90%;">
                        <!-- <div class="image-content d-flex align-self-center">
                            <img src="<%=board.path%>" alt="pizza-hut">
                        </div> -->
                        <div class="media-body" style="margin:10px 50px;">
                            <!-- <form action="/process/addboard" method="post"> -->
                            <!-- Heading -->
                            <h3 class="headerSign"><%=board.title %></h3>
                            <!-- Description -->
                            <div class="form-group">
                              <img src="/<%=board.path%>" alt="">
                            </div>
                            <div class="form-group">
                              <label class="darktext">카테고리</label>
                              <% for(var i=0; i < board.category.length;i++){ %>
                              <span style=""><%= board.category[i] %></span>
                              <% } %>
                            </div>
                            <div class="form-group">
                              <label class="darktext">지역</label>
                              <span style=""><%= board.region %></span>
                            </div>
                            <div class="form-group">
                              <label class="darktext">모집기한</label>
                              <span id="deadline"></span>
                              <script>
                                var i = new Date('<%- board.deadline %>');
                                document.getElementById('deadline').innerHTML = date_format(i);
                                function date_format(dateValue){
                                  var dd = dateValue.getDate();
                                  var mm = dateValue.getMonth()+1;
                                  var yyyy = dateValue.getFullYear();

                                  if(dd<10){
                                    dd = '0'+dd;
                                  }
                                  if(mm<10){
                                    mm = '0'+mm;
                                  }
                                  return yyyy+'-'+mm+'-'+dd;
                                }


                              </script>

                            </div>
                            <div class="form-group">
                              <label class="darktext">모집인원</label>
                                <label class="control-label" for="minNum">최소</label>
                                <span>&nbsp;<%=board.minNum%>명</span>
                                <label class="control-label" for="maxNum">최대</label>
                                <span>&nbsp;<%=board.maxNum%>명</span>
                                <label class="control-labe" for="currentNum">현재</label>
                                <span>&nbsp;<%=board.currentNum%>명</span>
                            </div>
                            <div class="form-group">
                              <label for="studyTerm" class="darktext">스터디 기간</label>
                              <span>&nbsp;<%=board.studyTerm%>주</span>
                            </div>
                            <div class="form-group">
                              <label for="price" class="darktext">금액<small style="color:gray;">(총)</small></label>
                              <span>&nbsp;<%=board.price%>[만원]</span>
                            </div>
                        </div>

                    </div>
                    <a href="/studentapply" style="width:150px;background-color:orange;border:1px solid white;color:white;">참여하기</a>
